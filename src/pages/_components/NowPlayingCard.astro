---
import Card from "@components/Card.astro"
import Label from "@components/Label.astro"
import MusicPlaceholder from "@assets/music.svg"
---

<Card id="np-section">
    <Label>Listening To</Label>
    <div class="np">
        <div class="np-art-container">
            <img id="np-art"/>
            <MusicPlaceholder id="np-placeholder" mode="inline" />
        </div>

        <div class="np-info">
            <p id="np-song"></p>
            <p id="np-artist"></p>
        </div>
    </div>
</Card>

<script>
    import { DEFAULT_IMAGE_ID, getNowPlaying } from "@scripts/lastfm";

    function updateNowPlaying() {
        getNowPlaying()
            .then((track) => {
                document.getElementById("np-section")!.style.setProperty("display", typeof track != "undefined" ? "block" : "none");
                document.getElementById("np-song")!.innerText = track?.name || "";
                document.getElementById("np-artist")!.innerText = track?.artist?.["#text"] || "";

                let artUrl = track?.image[3]?.["#text"];
                let art = (document.getElementById("np-art") as HTMLImageElement)

                art.src = artUrl || "";
                art.alt = track?.name || "";
                art.style.setProperty("display", artUrl?.includes(DEFAULT_IMAGE_ID) ? "none" : "block")
                document.getElementById("np-placeholder")!.style.setProperty("display", artUrl?.includes(DEFAULT_IMAGE_ID) ? "block" : "none")
            })
    }

    setInterval(updateNowPlaying, 10000)
    updateNowPlaying()
</script>

<style lang="scss">
    .np {
        display: flex;
        align-items: center;
        gap: 0.8em;
        margin-top: 1em;

        --art-size: 2.7em;
    }

    :global(#np-section) {
        display: none;
    }

    #np-art {
        width: var(--art-size);
        height: var(--art-size);
        border-radius: 20%;
        display: none;
    }

    .np-art-container {
        width: var(--art-size);
        height: var(--art-size);
        color: var(--primary);
        background-color: var(--secondaryContainer);
        border-radius: 20%;
        box-shadow: 0 1px 2px 1px rgba(0, 0, 0, 0.2);

        :global(svg) {
            width: var(--art-size);
            height: var(--art-size);
        }
    }

    .np-info {
        display: flex;
        flex-direction: column;
        gap: 0.3em;
        overflow: hidden;

        p {
            margin: 0;
        }
    }

    #np-song {
        font-size: 14px;
        font-weight: bold;
        color: var(--primary);
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    #np-artist {
        font-size: 11px;
        color: var(--onSurfaceAlt);
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    @media screen and (max-width: 970px) {
        .np {
            gap: 1em;
            --art-size: 3.5em;
        }

        #np-song {
            font-size: 18px;
        }

        #np-artist {
            font-size: 14px;
        }
	}
</style>