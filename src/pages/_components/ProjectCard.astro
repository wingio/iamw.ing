---
import Card from "@components/Card.astro";
import colors from "@assets/langColors.json";

import Star from "@icons/star.svg";

const {
    name,
    description,
    language,
    owner,
    stargazers_count,
    html_url,
} = Astro.props;

const stars =
    stargazers_count > 1000 ? `${(stargazers_count / 1000).toFixed(1)}k` : stargazers_count;

const avatarUrl = new URL(owner.avatar_url);
avatarUrl.searchParams.set("size", "64");

const langColor = colors[language as keyof typeof colors] || "#000" 
---

<a href={html_url}} target="_blank">
    <Card class="repoCard">
        <div class="author">
            <img src={avatarUrl.toString()} width="20px" alt=""/>

            {owner.login}
        </div>
        
        <p class="name">{name}</p>
        <span class="description">{description}</span>

        <div class="meta">
            <div>
                <Star width="14px" class="star" />
                <p>{stars}</p>
            </div>

            <div>
                <span class="lang" style=`--langColor:${langColor}` />
                <p>{language}</p>
            </div>
        </div>
    </Card>
</a>

<style lang="scss">
    .repoCard {
        transition: scale 0.2s;
        position: relative;

        &:hover {
            scale: 1.01;
        }
    }

    .author {
        display: flex;
        align-items: center;
        gap: 0.6em;
        font-size: 13px;
        color: var(--onSurfaceAlt);

        img {
            border-radius: 25%;
        }
    }

    .name {
        margin: 0.6em 0;
        font-size: 18px;
        font-weight: 500;
        color: var(--onSurface);
    }

    .description {
        margin-top: 0.2em 0;
        font-size: 14px;
        color: var(--onSurfaceAlt);
    }

    .meta {
        display: flex;
        align-items: center;
        margin-top: 1em;
        gap: 1em;
        line-height: 14px;
        bottom: 1em;

        div {
            display: flex;
            align-items: center;
            gap: 0.4em;
        }

        p {
            margin: 0;
            font-size: 14px;
            color: var(--onSurfaceAlt);
        }
        
        .star {
            color: var(--star);
        }

        .lang {
            width: 14px;
            height: 14px;
            background-color: var(--langColor, var(--onSurfaceAlt));
            border-radius: 50%;
        }
    }
</style>