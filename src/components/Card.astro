---
import type { HTMLAttributes } from 'astro/types'

export type Props = HTMLAttributes<"div">
---

<div {...Astro.props}>
    <slot />
</div>

<style>
    div {
        display: flex;
        flex-direction: column;
        border-radius: 16px;
        background-color: var(--containerLow);
        padding: 1.5em;
        box-shadow: 0 1px 2px 1px rgba(0, 0, 0, 0.2);
    }
</style>